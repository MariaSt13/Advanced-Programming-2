
@{
    ViewBag.Title = "ConfigView";
}

<h2>Config</h2>

@model WebApplication2.Models.ConfigModel

<p><b>@Html.DisplayNameFor(model => model.OutputDirectory):</b> @Html.DisplayFor(model => model.OutputDirectory)</p>
<p><b>@Html.DisplayNameFor(model => model.SourceName):</b> @Html.DisplayFor(model => model.SourceName)</p>
<p><b>@Html.DisplayNameFor(model => model.LogName):</b> @Html.DisplayFor(model => model.LogName)</p>
<p><b>@Html.DisplayNameFor(model => model.ThumbnailSize):</b> @Html.DisplayFor(model => model.ThumbnailSize)</p>
<p><b>Handlers:</b></p>
@foreach (var item in Model.Handlerslist)
{
    if (item.Length != 0)
    {
        @Html.ActionLink(item, "DeleteHendlerView", new { name = item })
    }
}