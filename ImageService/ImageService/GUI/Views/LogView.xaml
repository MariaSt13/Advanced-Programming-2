<UserControl x:Class="GUI.Views.LogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TextBlock Text="Logs" FontSize="25" Foreground="Blue" FontWeight="Bold"  HorizontalAlignment="Center"></TextBlock>


        <ListView HorizontalAlignment = "Left" Height = "240" Margin = "5,40,0,0" 
         VerticalAlignment = "Top" Width = "495" x:Name = "MessageList" ItemsSource="{Binding VM_MessageList}">

            <ListView.View>
                <GridView>
                    <GridViewColumn Header = "Type" DisplayMemberBinding = "{Binding Status}" 
                  Width = "50" />

                    <GridViewColumn Header = "Message" DisplayMemberBinding = "{Binding Message}" 
                  Width = "445"/>

                </GridView>
            </ListView.View>

        </ListView>
    </Grid>

</UserControl>
