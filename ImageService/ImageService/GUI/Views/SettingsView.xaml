<UserControl x:Class="GUI.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TextBlock Text="Settings" FontSize="25" Foreground="Blue" FontWeight="Bold"  HorizontalAlignment="Center"></TextBlock>
        <TextBlock Text="Output Directory:" Margin="0,34,0,-34" FontWeight="Bold"/>
        <TextBlock Text="Source Name:" Margin="0,54,0,-54" FontWeight="Bold"/>
        <TextBlock Text="Log Name:" Margin="0,75,0,-75" FontWeight="Bold"/>
        <TextBlock Text="Thumbnail Size:" Margin="0,99,0,-99" FontWeight="Bold"/>
    </Grid>
</UserControl>
